{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": false,
        "baseUrl": "./",
        "paths": {
            "@/types/*": [
                "src/types/*"
            ],
            "@/commands/*": [
                "src/commands/*"
            ]
        }
    },
    "files": [
        "src/Bot.ts",
        "src/assets/*"
    ],
    "include": [
        "**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist",
        ".vscode"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}